<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0"
          name="viewport"/>
    <title>@ViewData["Title"] - Архив погоды</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css"
          rel="stylesheet"/>
    <link rel="stylesheet"
          href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.css"/>
    <link rel="stylesheet"
          href="https://cdn.datatables.net/fixedheader/4.0.1/css/fixedHeader.dataTables.min.css"/>
    <link asp-append-version="true"
          href="~/css/site.css"
          rel="stylesheet"/>
    <link asp-append-version="true"
          href="~/WeatherArchive.styles.css"
          rel="stylesheet"/>
</head>
<body>
<header>
    <nav
        class="bg-white border-bottom box-shadow mb-3 navbar navbar-expand-sm navbar-light navbar-toggleable-sm">
        <div class="container-fluid">
            <a asp-action="Index"
               asp-area=""
               asp-controller="Weather"
               class="navbar-brand">
                Архив погоды
            </a>
            <button aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                    class="navbar-toggler"
                    data-bs-target=".navbar-collapse"
                    data-bs-toggle="collapse"
                    type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div
                class="collapse d-sm-inline-flex justify-content-between navbar-collapse">
                <ul class="flex-grow-1 navbar-nav">
                    <li class="nav-item">
                        <a asp-action="Display"
                           asp-area=""
                           asp-controller="Weather"
                           class="nav-link text-dark">
                            Просмотр
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Upload"
                           asp-area=""
                           asp-controller="Weather"
                           class="nav-link text-dark">
                            Загрузка
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main class="pb-3"
          role="main">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Архив погоды
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
<script
    src="https://cdn.jsdelivr.net/npm/luxon@3.5.0/build/global/luxon.min.js"></script>
<script
    src="https://cdn.datatables.net/fixedheader/4.0.1/js/dataTables.fixedHeader.min.js"></script>
<script asp-append-version="true"
        src="~/js/site.js"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>