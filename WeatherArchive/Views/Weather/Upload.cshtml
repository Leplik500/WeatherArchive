@{
    ViewBag.Title = "Upload Page";
    Layout = "_Layout";
}

<form action="#"
      id="uploadForm"
      enctype="multipart/form-data"
      method="post">
    <input class="btn no-animation"
           id="filesInput"
           multiple
           name="files"
           type="file"
           value="Choose excel files"/>
    <p id="errorMessage"
       style="color: red; display: none;">
        Invalid file type.
        Please upload an Excel file (.xls or .xlsx).
    </p>
    <p id="waitMessage"
       style="color: blue; display: none;">
        Please wait... Do some exercises
    </p>
    <button class="btn btn-outline-primary"
            id="uploadButton"
            type="submit">
        Upload files
    </button>
</form>

@section Scripts {
    <script asp-append-version="true" v="124" src="~/js/upload.js"></script>
}